#:kivy 1.0
#:import kivy kivy

<AudioBackground>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'background.jpg'
            size: self.size

    BoxLayout:
        padding: 5
        spacing: 190
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: 44
        Image:
            size_hint: None, None
            size: 50, 50
            source: 'dondake.png'
        Label:
            height: 24
            text_size: self.size
            color: (1, 1, 1, .8)
            text: 'Kivy %s - Cat AudioFYM' % kivy.__version__
            valign: 'middle'

    Label:
        text: 'Cat Audio'
        font_size: 28
        size_hint_y: None

    BoxLayout:
        Slider:
            min: 0.0
            max: 1.0
            value: 1.0
            on_value: app.set_volume(self.value)
            orientation: "vertical"
            size_hint_x: None
            width: "48dp"

        StackLayout:
            id: sl

    Button:
        text: 'STOP ALL SOUND'
        size_hint_y: None
        height: '50sp'
        on_press: app.release_audio()

<AudioButton>:
    size_hint: 0.3,0.3333
    width: self.height
    text_size: self.size
    font_size: '18sp'
    valign: 'middle'
